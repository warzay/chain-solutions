---
import { Picture } from 'astro:assets';
import logoWhite from '@assets/images/logo/logo-white.png';
import logoOrange from '@assets/images/logo/logo-orange.png';

interface Props {
  class?: string;
  width?: number;
  height?: number;
  color?: string;
}

const basePath = import.meta.env.BASE_URL.replace(/\/$/, '');

const { color = 'white', class: className = '' } = Astro.props as Props;

const logo = color === 'white' ? logoWhite : logoOrange;
---

<a href={`${basePath}/`}>
  <Picture
    src={logo}
    formats={['avif', 'webp']}
    alt='Logo'
    class={`${className}`}
  />
</a>
