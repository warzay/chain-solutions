---
interface Props {
  tag?: string;
  class?: string;
  size?: keyof SizeClasses;
}

interface SizeClasses {
  lg: string;
  xl: string;
  '1.5xl': string;
  '2xl': string;
}

const { tag = 'h1', class: className = '', size = 'xl' } = Astro.props as Props;
const Tag = tag as keyof HTMLElementTagNameMap;

const sizeClasses: SizeClasses = {
  lg: 'text-lg',
  xl: '~text-1.5xl/4.5xl',
  '1.5xl': 'text-3.5xl',
  '2xl': '~text-3.5xl/5.5xl',
};

const textSizeClass = sizeClasses[size];
---

<Tag class={`text-brand-gray-900 font-bold ${textSizeClass} ${className}`}>
  <slot />
</Tag>
